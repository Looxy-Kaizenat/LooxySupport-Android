<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="5sp"
        android:padding="2dp"
        android:background="@drawable/shape_rectangle_white_with_grey_stroke_radius10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="10sp"
            android:paddingTop="10sp"
            android:paddingEnd="10dp"
            android:paddingBottom="10sp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingEnd="10sp"
                android:paddingStart="0dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textShopName"
                    style="@style/bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/textBookingNumber"
                    style="@style/regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/app_name"
                    android:textColor="@color/grey_600"
                    android:textSize="8sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/textPaymentType"
                    style="@style/regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/app_name"
                    android:textColor="@color/grey_600"
                    android:textSize="8sp"
                    tools:ignore="SmallSp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center|start"
                    android:layout_marginTop="5sp">

                    <TextView
                        style="@style/regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/slot_colon"
                        android:textColor="@color/grey_600"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:id="@+id/textTimeSlot"
                        style="@style/regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:layout_marginStart="5sp"
                        android:textColor="@color/blue"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textShopPhone"
                    style="@style/regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/app_name"
                    android:textColor="@color/grey_600"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end|center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textDate"
                            style="@style/bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="03"
                            android:textColor="@color/grey_600"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/textSuperScript"
                            style="@style/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/textDate"
                            android:text="rd"
                            android:textColor="@color/grey_600"
                            android:textSize="10sp"
                            tools:ignore="SmallSp" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/textMonthDay"
                        style="@style/bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="@color/grey_600"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textUserName"
                    style="@style/regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/app_name"
                    android:textColor="@color/grey_600"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/textUserPhone"
                    style="@style/regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/app_name"
                    android:textColor="@color/grey_600"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/grey_200"
            tools:ignore="SmallSp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:orientation="horizontal"
                android:paddingStart="15sp"
                android:paddingEnd="15sp">

                <!--    previous weight 4-->
                <TextView
                    android:id="@+id/textService"
                    style="@style/bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="@string/services"
                    android:textColor="@color/dark_grey"
                    android:textSize="12sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/textExpert"
                    style="@style/bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:layout_weight="2.5"
                    android:text="@string/stylist"
                    android:visibility="gone"
                    android:textColor="@color/dark_grey"
                    android:textSize="12sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/textSlot"
                    style="@style/bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:layout_weight="4"
                    android:text="@string/slot"
                    android:visibility="gone"
                    android:textColor="@color/dark_grey"
                    android:textSize="12sp"
                    tools:ignore="SmallSp" />

                <TextView
                    style="@style/bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:layout_weight="2"
                    android:gravity="end"
                    android:textColor="@color/dark_grey"
                    android:textSize="12sp"
                    android:text="@string/amount"
                    tools:ignore="SmallSp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textServiceDeleted"
                style="@style/regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/service_deleted"
                android:textColor="@color/dark_grey"
                android:textSize="10sp"
                android:layout_marginTop="15sp"
                android:gravity="center"
                tools:ignore="SmallSp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                tools:itemCount="2"
                tools:listitem="@layout/item_booking_history_services" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/grey_200"
            tools:ignore="SmallSp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15sp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/textAmount"
                    android:text="@string/total"
                    android:textColor="@color/dark_grey"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/textAmount"
                    style="@style/regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="@string/Rs0"
                    android:textColor="@color/dark_grey"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp">

                <TextView
                    style="@style/regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/textOffer"
                    android:text="@string/offer_applied"
                    android:textColor="@color/dark_grey"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/textOffer"
                    style="@style/regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="@string/Rs0"
                    android:textColor="@color/dark_grey"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutTax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp">

                <TextView
                    android:id="@+id/textTaxPercentage"
                    style="@style/regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/textTaxAmount"
                    android:text="@string/tax_and_charges"
                    android:textColor="@color/dark_grey"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/textTaxAmount"
                    style="@style/regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="@string/Rs0"
                    android:textColor="@color/dark_grey"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/grey_200"
            tools:ignore="SmallSp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15sp"
            android:paddingEnd="15sp"
            android:paddingTop="15sp"
            android:paddingBottom="15sp">

            <TextView
                android:id="@+id/textPaidAmountStatus"
                style="@style/regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/textTotalAmount"
                android:text="@string/paid_amount"
                android:textColor="@color/dark_grey"
                android:textSize="10sp"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/textTotalAmount"
                style="@style/regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/Rs0"
                android:textColor="@color/dark_grey"
                android:textSize="10sp"
                tools:ignore="SmallSp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>